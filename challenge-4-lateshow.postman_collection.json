{
  "info": {
    "name": "Late Show API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json" 
  },
  "item": [
    {
      "name": "Register User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"username\": \"admin\",\n    \"password\": \"password\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["register"]
        }
      }
    },
    {
      "name": "Login User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"username\": \"admin\",\n    \"password\": \"password\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["login"]
        }
      }
    },
    {
      "name": "List Episodes",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:5000/episodes",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["episodes"]
        }
      }
    },
    {
      "name": "Get Episode by ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:5000/episodes/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["episodes", "1"]
        }
      }
    },
    {
      "name": "Delete Episode by ID (Protected)",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:5000/episodes/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["episodes", "1"]
        }
      }
    },
    {
      "name": "List Guests",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:5000/guests",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["guests"]
        }
      }
    },
    {
      "name": "Create Appearance (Protected)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"rating\": 5,\n    \"guest_id\": 1,\n    \"episode_id\": 1\n}"
        },
        "url": {
          "raw": "http://localhost:5000/appearances",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["appearances"]
        }
      }
    }
  ]
}